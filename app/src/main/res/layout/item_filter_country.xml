<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="pos"
            type="int" />

        <variable
            name="vm"
            type="com.chanho.basic.ui.filter.FilterViewModel" />

        <variable
            name="model"
            type="com.chanho.basic.model.Country" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:onClick="@{()->vm.onCountryItemClicked(model,pos)}"
            app:cardBackgroundColor="@{model.check==false ? @color/white : @color/teal_200}"
            app:cardCornerRadius="10dp"
            tools:cardBackgroundColor="@color/teal_200">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp">

                <TextView
                    style="@style/CustomTextViewNanumR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{model.key}"
                    android:textSize="12dp"
                    tools:text="국가아이템" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</layout>